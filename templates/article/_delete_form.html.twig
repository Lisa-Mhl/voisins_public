<form method="post" action="{{ path('article_delete', {'id': article.id}) }}" onsubmit="return confirm('Attention ! La suppression de votre article est définitive ! Êtes-vous sûr(e) de vouloir le supprimer ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
