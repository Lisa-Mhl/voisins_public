        <a class="navLink" href="{{ path('news') }}">News</a>
        <a class="navLink" href="{{ path('about') }}">Comment ça marche ?</a>
        <a class="navLink" href="{{ path('app_logout') }}">Se déconnecter</a>
    {% else %}
        <a class="navLink" href="{{ path('about') }}">Comment ça marche ?</a>
        <a class="navLink" href="{{ path('app_register') }}">S'inscrire</a>
        <a class="navLink" href="{{ path('app_login') }}">Se connecter</a>
    {% endif %}
